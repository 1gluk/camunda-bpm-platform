<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="urn:maven:assembly:1.1.0-SNAPSHOT">

    <id>assemble</id>

    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib/db</outputDirectory>
            <includes>
                <include>com.h2database:h2</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <files>
        <file>
            <source>src/start.sh</source>
            <filtered>true</filtered>
            <outputDirectory>bin/</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>src/start.bat</source>
            <filtered>true</filtered>
            <outputDirectory>bin/</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>../../modules/rest/target/camunda-rest-distro-rest-${project.version}.jar
            </source>
            <outputDirectory>lib/</outputDirectory>
        </file>
        <file>
            <source>../../modules/webapps/enterprise/target/camunda-rest-distro-webapps-ee-${project.version}.jar
            </source>
            <outputDirectory>lib/webapps</outputDirectory>
        </file>
        <file>
            <source>src/application.yml</source>
            <outputDirectory>config/</outputDirectory>
        </file>
    </files>
</assembly>
