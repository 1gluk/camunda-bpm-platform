<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns="urn:maven:assembly:1.1.0-SNAPSHOT">

    <id>assemble</id>

    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib/db</outputDirectory>
            <includes>
                <include>com.h2database:h2</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <files>
        <file>
            <source>../src/application.yml</source>
            <outputDirectory>config/</outputDirectory>
        </file>
        <file>
            <source>../src/start.sh</source>
            <filtered>true</filtered>
            <outputDirectory>bin/</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>../src/start.bat</source>
            <filtered>true</filtered>
            <outputDirectory>bin/</outputDirectory>
            <fileMode>0755</fileMode>
        </file>
        <file>
            <source>target/camunda-bpm-rest-distro-${project.version}.jar</source>
            <outputDirectory>lib/</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>../../modules/rest/target/dependency/</directory>
            <outputDirectory>lib/rest/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../../modules/webapps/community/target/dependency/</directory>
            <outputDirectory>lib/webapps/</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
