<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.camunda</groupId>
        <artifactId>camunda-rest-modules</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>camunda-rest-distro</artifactId>
    <name>camunda BPM - Distro Modules</name>
    <packaging>jar</packaging>

    <dependencies>
        <!-- add camunda starter rest -->
        <dependency>
            <groupId>org.camunda.bpm.springboot</groupId>
            <artifactId>camunda-bpm-spring-boot-starter-rest</artifactId>
            <version>${version.camunda.spring.boot.starter}</version>
        </dependency>

        <dependency>
            <groupId>org.camunda</groupId>
            <artifactId>camunda-rest-distro-webapps</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>

        <!-- add jdbc driver -->
        <dependency>
            <groupId>com.h2database</groupId>
            <artifactId>h2</artifactId>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${version.spring.boot}</version>
                <configuration>
                    <layout>ZIP</layout>
                    <excludes>
                        <exclude>
                            <groupId>org.camunda</groupId>
                            <artifactId>camunda-rest-distro-webapps</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.camunda.bpm.springboot</groupId>
                            <artifactId>camunda-bpm-spring-boot-starter-webapp</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.camunda.bpm.springboot</groupId>
                            <artifactId>camunda-bpm-spring-boot-starter-webapp-core</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.camunda.bpm.webapp</groupId>
                            <artifactId>camunda-webapp</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.camunda.bpm.webapp</groupId>
                            <artifactId>camunda-webapp-webjar</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>